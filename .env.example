# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID - Your application ID
CLIENT_ID=your_client_id_here

# Discord Guild ID - Your server ID (right-click server icon and copy ID)
GUILD_ID=your_guild_id_here

# Command Prefix - The prefix for prefix-based commands (default: !)
# You can change this to any character(s) you prefer (e.g., ., >, $, etc.)
COMMAND_PREFIX=!

# Twitch API Credentials (Optional) - For Twitch streamer notifications
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_ACCESS_TOKEN=your_twitch_oauth_token_here

# Slash command registration behavior
# When GUILD_ID is set, commands register to that guild instantly. (no duplicates)
# Set REGISTER_GLOBAL_WHEN_GUILD=true if you ALSO want to register globally (may show duplicates while caching).
REGISTER_GLOBAL_WHEN_GUILD=false

# Auto-execution of Active Developer badge command
# Set to false to disable automatic execution every 30 days (default: true)
ENABLE_AUTO_EXECUTION=true