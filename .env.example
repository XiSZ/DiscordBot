# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID - Your application ID
CLIENT_ID=your_client_id_here

# Discord Guild ID - Your server ID (right-click server icon and copy ID)
GUILD_ID=your_guild_id_here

# Command Prefix - The prefix for prefix-based commands (default: !)
# You can change this to any character(s) you prefer (e.g., ., >, $, etc.)
COMMAND_PREFIX=!

# Twitch API Credentials (Optional) - For Twitch streamer notifications
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_ACCESS_TOKEN=your_twitch_oauth_token_here

# Slash command registration behavior
# When GUILD_ID is set, commands register to that guild instantly. (no duplicates)
# Set REGISTER_GLOBAL_WHEN_GUILD=true if you ALSO want to register globally (may show duplicates while caching).
REGISTER_GLOBAL_WHEN_GUILD=false

# Auto-execution of Active Developer badge command
# Set to false to disable automatic execution every 30 days (default: true)
ENABLE_AUTO_EXECUTION=true

# Dashboard Configuration (Optional)
# CLIENT_SECRET - Discord OAuth2 Client Secret (get from Discord Developer Portal > OAuth2)
CLIENT_SECRET=your_client_secret_here

# SESSION_SECRET - Random string for session encryption (generate a strong random string)
SESSION_SECRET=your_random_session_secret_here

# CONTROL_TOKEN - Shared secret for bot-dashboard communication (uses SESSION_SECRET if not set)
# Only needed if running bot and dashboard as separate processes. Leave empty for single-process setups.
# If set, must be the same value in both bot and dashboard environments
CONTROL_TOKEN=

# BOT_CONTROL_PORT - Internal API port for bot-dashboard communication (default: 3210)
BOT_CONTROL_PORT=3210

# DASHBOARD_PORT - Port for the web dashboard (default: 3000)
DASHBOARD_PORT=3000

# DASHBOARD_CALLBACK_URL - OAuth callback URL (set this in Discord Developer Portal > OAuth2 > Redirects)
# For local development: http://localhost:3000/auth/callback
# For production: https://your-domain.com/auth/callback
DASHBOARD_CALLBACK_URL=http://localhost:3000/auth/callback
